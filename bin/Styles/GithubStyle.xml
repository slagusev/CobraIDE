<!-- This is based on the GitHub color theme -->

<!-- newest version always at github repo https://github.com/dkucinskas/MonoDevelop-Styles -->

<EditorStyle name="GithubStyle" _description="GithubStyle style from GitHub site color theme.">
  
  <!-- Color  palette -->
  <Color name="normal_fg" value="#333333" />
  <Color name="normal_bg" value="#ffffff" />
  <Color name="comment_fg" value="#999988" />
  <Color name="line_nr_fg" value="#aaaaaa" />
  <Color name="line_nr_bg" value="#ececec" />
  <Color name="cursor_line" value="#f6f6f6" />
  <Color name="diff_change" value="#e0e0e0" />
  <Color name="diff_add" value="#ddffdd" />
  <Color name="diff_deleted" value="#ffdddd" />
  <Color name="string" value="#dd1144" />
  <Color name="constant" value="#a07040" />
  <Color name="number" value="#009999" />
  <Color name="type" value="#445588" />
  <Color name="statement" value="#333333" />
  <Color name="error_bg" value="#ffaaaa" />
  <Color name="warning_bg" value="#ffffaa" />

  <Style name="text" color="normal_fg" bgColor="normal_bg" />
  <Style name="text.background.readonly" color="#F9F9F8" />
  <Style name="text.selection" color="#ffffff" bgColor="type" />
  <Style name="text.selection.inactive" color="#FDD99B" bgColor="#A9A9A9" />
  <Style name="text.background.searchresult" color="#FFFF00" />
  <Style name="text.background.searchresult-main" color="#F3DD48" />
  <Style name="text.link" color="type" />

  <Style name="linenumber" color="line_nr_fg" bgColor="line_nr_bg" />
  <Style name="linenumber.highlight" color="type" bgColor="line_nr_bg" />
  <Style name="iconbar" color="line_nr_bg" />
  <Style name="iconbar.separator" color="line_nr_bg" />
  <Style name="fold" color="line_nr_fg" bgColor="normal_bg" />
  <Style name="fold.highlight" color="type" bgColor="normal_bg" />
  <Style name="fold.togglemarker" color="#000000" bgColor="normal_fg" />
  <Style name="marker.line.dirty" color="diff_deleted" />
  <Style name="marker.line.changed" color="diff_add" />
  <Style name="marker.line" color="type" />
  <Style name="marker.ruler" color="type" />
  <Style name="marker.whitespace" color="#D9BB7A" />
  <Style name="marker.invalidline" color="#D40000" />
  <Style name="marker.breakpoint" color="#FFFFFF" bgColor="#7D0000" />
  <Style name="marker.breakpoint.color1" color="#FFFFFF" />
  <Style name="marker.breakpoint.color2" color="#7D0000" />
  <Style name="marker.breakpoint.disabled.background" color="#EDDCDC" />
  <Style name="marker.debug.currentline" color="#ffffff" bgColor="type" />
  <Style name="marker.debug.currentline.color1" color="#FEFF00" />
  <Style name="marker.debug.currentline.color2" color="#FEFECC" />
  <Style name="marker.debug.currentline.border" color="#656600" />
  <Style name="marker.debug.stackline" color="#000000" bgColor="#80FF80" />
  <Style name="marker.debug.stackline.color1" color="#80FF80" />
  <Style name="marker.debug.stackline.color2" color="#CCFECC" />
  <Style name="marker.debug.stackline.border" color="#336633" />
  <Style name="marker.breakpoint.invalid.background" color="#EDDCDC" />
  <Style name="marker.breakpoint.invalid.color1" color="#EDDCDC" />
  <Style name="marker.breakpoint.invalid.border" color="#7D0000" />
  <Style name="marker.bracket" color="#6699CC" bgColor="#AACCEE" />
  <Style name="marker.bookmark.color1" color="#FDD99B" />
  <Style name="marker.bookmark.color2" color="#816647" />
  <Style name="marker.underline.error" color="#FF0000" />
  <Style name="marker.underline.warning" color="#FFA500" />
  <Style name="marker.underline.suggestion" color="#8FC68F" />
  <Style name="marker.underline.hint" color="#8F8FC6" />
  <Style name="diff.line-added" bgColor="diff_add" />
  <Style name="diff.line-removed" bgColor="diff_deleted" />
  <Style name="diff.line-changed" bgColor="diff_changed" />
  <Style name="diff.header" color="#008000"/>
  <Style name="diff.header-seperator" color="#0000FF" />
  <Style name="diff.header-oldfile" color="#008000"/>
  <Style name="diff.header-newfile" color="#008000"/>
  <Style name="diff.location" color="#FB8B00" />
  <Style name="marker.template.primary_template" color="#015A01" bgColor="#98FC66" />
  <Style name="marker.template.primary_highlighted_template" color="#015A01" bgColor="#CCFF99" />
  <Style name="marker.template.secondary_template" color="#FFFFFF" bgColor="#FFFFFF" />
  <Style name="marker.template.secondary_highlighted_template" color="#D9BB7A" bgColor="#FDD99B" />
  <Style name="bubble.warning" color="#000000" bgColor="warning_bg" />
  <Style name="bubble.warning.text" color="#000000" />
  <Style name="bubble.error" color="#000000" bgColor="error_bg" />
  <Style name="bubble.error.text" color="#000000" />
  <Style name="template" color="#000000" />
  <Style name="template.tag" color="#FF00FF" />
  <Style name="template.directive" color="#FF00FF" />
  
  <Style name="comment" color="comment_fg" />
  <Style name="comment.tag" color="comment_fg" />
  <Style name="comment.line" color="comment_fg" />
  <Style name="comment.tag.line" color="comment_fg" />
  <Style name="comment.block" color="comment_fg" />
  <Style name="comment.tag.block" color="comment_fg" />
  <Style name="comment.doc" color="comment_fg" />
  <Style name="comment.tag.doc" color="comment_fg" />
  <Style name="comment.keyword" color="comment_fg"/>
  <Style name="comment.keyword.todo" color="statement" weight="Bold" />
  
  <Style name="text.punctuation" color="type" />
  <Style name="text.preprocessor" color="type" />
  <Style name="text.preprocessor.keyword" color="type"/>
  <Style name="text.markup" color="normal_fg" />
  <Style name="text.markup.tag" color="normal_fg" />
  
  <Style name="constant" color="constant" />
  <Style name="constant.digit" color="number" />
  <Style name="constant.language" color="statement" weight="Bold" />
  <Style name="constant.language.void" color="statement" weight="Bold" />
  
  <Style name="string" color="string" />
  <Style name="string.single" color="string" />
  <Style name="string.double" color="string" />
  <Style name="string.other" color="string" />
  
  <Style name="keyword" color="type" weight="Bold" />
  <Style name="keyword.access" color="statement" weight="Bold" />
  <Style name="keyword.namespace" color="statement" weight="Bold" />
  <Style name="keyword.property" color="statement" weight="Bold" />
  <Style name="keyword.modifier" color="statement" weight="Bold" />
  <Style name="keyword.type" color="type" weight="Bold" />
  <Style name="keyword.declaration" color="statement" weight="Bold" />
  <Style name="keyword.operator" color="statement" weight="Bold" />
  <Style name="keyword.operator.declaration" color="statement" weight="Bold" />
  <Style name="keyword.selection" color="statement" weight="Bold" />
  <Style name="keyword.iteration" color="statement" weight="Bold" />
  <Style name="keyword.jump" color="statement" weight="Bold" />
  <Style name="keyword.context" color="statement" weight="Bold" />
  <Style name="keyword.exceptions" color="statement" weight="Bold" />
  <Style name="keyword.parameter" color="type" weight="Bold" />
  <Style name="keyword.misc" color="statement" weight="Bold"/>
  <Style name="keyword.semantic.type" color="type" weight="Bold" />
  <Style name="keyword.semantic.field" color="type" weight="Bold" />

  <Style name="marker.whitespace.eol" color="#D9BB7A" />
  <Style name="marker.breakpoint.invalid" color="#FFFFFF" bgColor="#7D0000" />
</EditorStyle>
